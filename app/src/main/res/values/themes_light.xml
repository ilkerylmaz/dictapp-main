<resources>
    <!-- Açık Tema -->
    <style name="Theme.Dictapp.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/accent_cyan</item>
        <item name="colorSecondaryVariant">@color/accent_cyan</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Arka plan ve yüzey renkleri -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        
        <!-- Durum çubuğu ve gezinme çubuğu -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Bottom Navigation ve Kartlar için gölge -->
        <item name="elevation">3dp</item>
        
        <!-- Kart ve yüzey stilleri -->
        <item name="cardBackgroundColor">@color/card_light</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Light</item>
        
        <!-- Metin renkleri -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
    </style>

    <style name="Widget.App.CardView.Light" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_light</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources> 